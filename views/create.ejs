<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/create.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/b5328c2db7.js"
      crossorigin="anonymous"
    ></script>
    <script>
      function previewImage() {
        var imgPrev = document.querySelector("#imagePreview");
        var uploadBtn = document.querySelector(".upload-btn");
        var preview = document.querySelector("img");
        var file = document.querySelector("input[type=file]").files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
          preview.src = reader.result;
          uploadBtn.style.display = "none";
          imgPrev.style.border = "none";
        };

        if (file) {
          reader.readAsDataURL(file);
        } else {
          preview.src = "";
          preview.alt = "";
        }
      }

      function connectFileInput() {
        var fileInput = document.querySelector("input[type=file]");
        fileInput.click();
      }

      function connectSubmit() {
        var submit = document.querySelector("#submit");
        submit.click();
      }
    </script>
  </head>
  <body>
    <div class="container">
      <div class="top-bar">
        <h1>Create Pin</h1>
        <button class="publish-btn" onclick="connectSubmit()">Publish</button>
      </div>

      <hr />
      <div class="create-pin-wrapper">
        <div class="image-holder">
          <!-- <input
            type="file"
            name="file"
            accept="image/*"
            onchange="previewImage()"
            style="display: none"
          /> -->

          <div id="imagePreview" onclick="connectFileInput()">
            <img src="" alt="" />
            <div class="upload-btn">
              <i class="fa-solid fa-circle-arrow-up"></i>
              <p>Choose a file here</p>
            </div>
          </div>

          <hr />

          <button class="img-url">Save from URL</button>
        </div>
        <div class="details">
          <form action="" method="">
            <input
              type="file"
              name="image"
              accept="image/*"
              onchange="previewImage()"
              style="display: none"
            />
            <div class="form-group">
              <label for="title">Title:</label>
              <input
                type="text"
                id="title"
                name="title"
                placeholder="Add a title"
              />
            </div>
            <div class="form-group">
              <label for="description">Description:</label>
              <textarea
                id="description"
                name="description"
                placeholder="Add a detailed description"
              ></textarea>
            </div>
            <div class="form-group">
              <label for="link">Link:</label>
              <input
                type="url"
                id="link"
                name="link"
                placeholder="Add a link"
              />
            </div>
            <div class="form-group">
              <label for="board">Board:</label>
              <input
                type="text"
                id="board"
                name="board"
                placeholder="Add a board"
              />
            </div>
            <div class="form-group">
              <label for="tags">Tags:</label>
              <input type="text" id="tags" name="tags" placeholder="Add tags" />
            </div>
            <button type="submit" id="submit" style="display: none">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
